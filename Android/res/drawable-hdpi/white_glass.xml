<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#F5EEDF" /> <!-- main bone colour??? -->
            <stroke
                android:width="1dp"
                android:color="#E3D6CA" /> <!-- dark shading colour?? -->
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#F5EEDF"
                android:endColor="#E3D6CA"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#999999" /> <!-- outline -->
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>