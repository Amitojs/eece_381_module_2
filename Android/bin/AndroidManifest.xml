<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ece381"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.ece381.MyApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ece381.Intro"
            android:label="@string/title_activity_intro"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ece381.Settings"
            android:label="@string/title_activity_settings" >
            <intent-filter>
                <action android:name="com.example.ece381.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ece381.MainActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_piano"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.example.ece381.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ece381.Menu"
            android:label="@string/title_activity_menu" >
            <intent-filter>
                <action android:name="com.example.ece381.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ece381.Piano"
            android:configChanges="orientation"
            android:label="@string/title_activity_piano"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>